/* pages/post/book-item/book-item.wxss */
.book_container{
    width:100%;
    height:700rpx;
    border-top:2rpx solid #f2f2f2;
    border-bottom:2rpx solid #f2f2f2;
    box-sizing:border-box;
    padding:40rpx 30rpx;
    overflow:hidden;
}
.title{
    text-align:center;
    margin-bottom:30rpx;
}
.book_abstract{
    display:flex;
    flex-direction:row;
    margin-top:30rpx;
}
.surface_pic image{
    width:280rpx;
    height:360rpx;
}
.book_info{
    display:flex;
    flex-direction:column;
    margin-left:30rpx;
    
}
.book_info text{
    font-size:25rpx;
    margin-bottom:30rpx;
    color:#666;
}
.book_summary{
    text-indent:2em;
    font-size:28rpx;
    color:#989898;
    line-height:56rpx;
}