@import "../movie/movie-template.wxss";
.movie-list-container{
    background-color:#fff;
    display:flex;
    flex-direction:column;
  
}
.movie-head{
    padding:30rpx 20rpx 22rpx;
    display:flex;
    flex-direction:row; 
    justify-content:space-between;
    align-items:baseline;
    width:100%;

}
.slogan{
    font-size:24rpx;
}
.more{
    padding:10rpx;
    margin-right:60rpx;
}
.more-text{
    margin-right:10rpx;
    color:#1f4ba5;
    vertical-align:middle;
}
.more-img{
    width:9rpx;
    height:17rpx;
    vertical-align:middle;
}
.movies-container{
    display:flex;
    flex-direction:row;
}
